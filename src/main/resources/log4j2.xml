<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <property name="LOG_DIR">logs</property>
        <property name="main_pattern">%d{HH:mm:ss} %-5level %logger{3} - %msg%n</property>
        <property name="file_name_pattern">${LOG_DIR}/${date:yyyy-MM-dd}/text_%i.log</property>
    </Properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${main_pattern}"/>
        </Console>
        <RollingFile name="FileRolling" fileName="${LOG_DIR}/text_roll.log" append="true" filePattern= "${file_name_pattern}">
            <PatternLayout pattern="${main_pattern}"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="15 KB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileRolling"/>
        </Root>
    </Loggers>
</Configuration>